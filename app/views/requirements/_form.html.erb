<div class="col-md-8">
	<div class="card">
		<div class="card-header" data-background-color="purple">
			<h4 class="title">Requirement for for role as <%= @jd.job_title %> at <%= @jd.company.company_name %></h4>
		</div>
		<div class="card-content">
			<%= simple_form_for([jd, requirement]) do |f| %>
			<% if f.object.errors.any? %>
			<div class="alert alert-danger">  
				<% f.object.errors.full_messages.uniq.each do |msg| %>
				  <%= msg %>
				<br>
				<% end %>
			</div> 
			<% end %>
			<div class="row">
				<div class="col-md-4">
					<div class="form-group label-floating">
						<label class="control-label">Requirement</label>
						<%= f.input :content, label: false, class: "form-control" %>
					</div>
				</div>
			</div>

			</div>
			<div class="clearfix"></div>
			  <%= f.button :submit, "Save", class: "btn btn-primary btn-xs btn-round pull-right" %>	
			  <br>
			  <div class="clearfix"></div>
			  <%= link_to "proceed later", [@jd.company, @jd], class: "btn btn-primary btn-xs btn-round pull-right" %>
			<% end %>
		</div>
	</div>
</div>
