<div class="col-md-12">
	<div class="card">
		<div class="card-header" data-background-color="purple">
			<h4 class="title">Message STATUS:
				<% if @message.save_as_draft? %>
					DRAFT	
				<% else %>	
					SENT 	
				<% end %>		
			</h4>
			<p class="category"></p>
		</div>
		<div class="card-content">
		<div class="row">
				<div class="col-md-3">
					<div class="form-group label-floating">
						<label class="control-label"><span class="btn btn-primary btn-xs btn-round">TO:</span></label>
						<br>
						<%= @message.recipient_name %>
					</div>
				</div>

				<div class="col-md-4">
					<div class="form-group label-floating">
						<label class="control-label"><span class="btn btn-primary btn-xs btn-round">TITLE:</span></label>
						<br>
						<%= @message.title %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<div class="form-group label-floating">
						<label class="control-label"><span class="btn btn-primary btn-xs btn-round">CONTENT:</span></label>
						<br>
						<%= @message.content %>
					</div>
				</div>
			</div>

			<div class="clearfix">
			  <div class="pull-right">
				<%= link_to edit_admin_message_url(@message, page: "from show") do %>
				<button type="button" title="Edit Message" class="btn btn-primary btn-simple btn-xs">
					<i class="material-icons">edit</i>
				</button>
				<% end %> 

				<%= link_to [:admin, @message], method: :delete, data: { confirm: "Are you sure you want to delete this message?" } do %>
				<button type="button" title="Remove" class="btn btn-primary btn-simple btn-xs">
					<i class="material-icons">close</i>
				</button>  
				<% end %>	
			  </div>	
			</div>
		</div>
	</div>
</div>

<%= javascript_include_tag "admin/jquery-3.1.0.min" %>
<%= javascript_include_tag "admin/bootstrap.min" %>
<%= javascript_include_tag "admin/material.min" %>
<%= javascript_include_tag "admin/chartist.min" %>
<%= javascript_include_tag "admin/bootstrap-notify" %>
<%= javascript_include_tag "admin/material-dashboard" %>
