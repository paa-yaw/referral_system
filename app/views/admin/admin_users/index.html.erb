<%#= link_to "Add A admin", new_user_admin_url(current_user), class: "btn btn-primary" %>
<%= link_to "Add Admin", new_admin_admin_user_url, class: "btn btn-primary" %>
<% if @admins.any? %>
<div class="col-md-12">
	<div class="card">
		<div class="card-header" data-background-color="purple">
			<h4 class="title">Admins</h4>
		</div>
		<div class="card-content table-responsive">
			<table class="table">
				<thead class="text-primary">
					<th>Username</th>
					<th>Email</th>
					<th></th>
				</thead>
				<% @admins.each do |admin| %>
				<tbody>
				    <% if admin.updated? %>
				    <%= simple_form_for([:admin, :admin, admin]) do |f| %>
				    <tr>
						<td class="col-md-4"><%= f.input :username, label: false, class: "form-control" %></td>
						<td class="col-md-4"><%= f.input :email, label: false, class: "form-control" %></td>
						<td class="td-actions text-right">
						  <%= f.button :submit, "update", class: "btn btn-primary pull-right" %>				
						</td>  	
					<% end %>	
					</tr>
				    <% else %>
					<tr>
						<td><%= admin.username %></td>
						<td><%= admin.email %></td>
						<td class="td-actions text-right">
							<%= link_to admin_update_button_for_admin_url(admin), method: :patch do %>
							<button type="button" title="Edit Task" class="btn btn-primary btn-simple btn-xs">
								<i class="material-icons">edit</i>
							</button>
							<% end %>
							<%= link_to admin_admin_user_url(admin), method: :delete, data: { confirm: "Are you sure?" } do %>
							<button type="button" title="Remove" class="btn btn-danger btn-simple btn-xs">
								<i class="material-icons">close</i>
							</button>
							<% end %>
							<%= link_to admin_admin_user_url(admin) do %>
								<i class="material-icons">visibility</i>
							<% end %>
						</td>  	
					</tr>
					<% end %>
				</tbody>
				<% end %>
			</table>

		</div>
	</div>
</div>
<% else %>
<h4>None at the moment</h4>

<% end %>
