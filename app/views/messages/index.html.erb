<%= link_to messages_url do %>
  <button class="btn btn-success btn-xs btn-round">
  	All Messages
  </button>
<% end %>

<%= link_to messages_url(category: "received") do %>
  <button class="btn btn-warning btn-xs btn-round">
  	Inbox
  </button>
<% end %>

<%= link_to messages_url(category: "sent") do %>
  <button class="btn btn-info btn-xs btn-round">
  	Outbox
  </button>
<% end %>

<%= link_to messages_url(category: "draft") do %>
  <button class="btn btn-default btn-xs btn-round">
  	Draft
  </button>
<% end %>

<%= link_to messages_url(category: "archived") do %>
  <button class="btn btn-danger btn-xs btn-round">
  	Archived Messages
  </button>
<% end %>
<div class="col-md-12">
	<div class="card">
		<div class="card-header" data-background-color="purple">
			<h4 class="title">Messages</h4>
		</div>
		<div class="card-content table-responsive">
			<table class="table">
				<thead class="text-primary">
					<th>From</th>
					<th>Message</th>
					<th>Status</th>
					<th></th>
					<th>Timestamp</th>
				</thead>
				<tbody>
				<% if @messages.any? %>
				  <% @messages.each do |message| %>
					<tr>
						<td>
						<% if message.user_id == current_user.id %>
						    <%= link_to "Me", "#", class: "btn btn-primary btn-xs btn-round" %>
						  <% else %>
						    <%= link_to message.sent_by, "#", class: "btn btn-primary btn-xs btn-round" %>
						  <% end %>  
						</td>
						<td class="text-primary"><strong><%= message.title %></strong>***<%= link_to truncate(message.content, length: 40), message_url(message, message_id: message.id) %>

						<% unless params[:category] == "received" || message.user.admin? %>
						  <% unless !message.draft? %>
						    <%= link_to [:edit, message] do %>
						      <button type="button" title="Edit" class="btn btn-primary btn-simple btn-xs">
						        <i class="material-icons">edit</i>
						      </button>
						    <% end %> 

						    <%= link_to [message], method: :delete, data: { confirm: "Are you sure you want to delete this message?" } do %>
						      <button type="button" title="Remove" class="btn btn-primary btn-simple btn-xs">
							    <i class="material-icons">close</i>
						      </button>  
						    <% end %>
						  <% end %>  	

						  <% if message.archived_by_user? %>
						    <%= link_to [:unarchive, message], method: :patch, data: { confirm: "Are you sure you want to unarchive this message?"} do %>
						      <button type="button" title="Unarchive" class="btn btn-primary btn-simple btn-xs">  
						        <i class="material-icons">unarchive</i>
						      </button>  
						    <% end %> 
						  <% else %> 
						    <%= link_to [:archive, message], method: :patch, data: { confirm: "Are you sure you want to archive this message?"} do %>
						      <button type="button" title="Archive" class="btn btn-primary btn-simple btn-xs">  
						        <i class="material-icons">archive</i>
						      </button>  
						    <% end %>
						  <% end %>
						<% end %>  

						<% if message.user.admin? %>
						  <% if message.archived_by_user? %>
						    <%= link_to [:unarchive, message], method: :patch, data: { confirm: "Are you sure you want to unarchive this message?"} do %>
						      <button type="button" title="Unarchive" class="btn btn-primary btn-simple btn-xs">  
						        <i class="material-icons">unarchive</i>
						      </button>  
						    <% end %> 
						  <% else %> 
						    <%= link_to [:archive, message], method: :patch, data: { confirm: "Are you sure you want to archive this message?"} do %>
						      <button type="button" title="Archive" class="btn btn-primary btn-simple btn-xs">  
						        <i class="material-icons">archive</i>
						      </button>  
						    <% end %>
						  <% end %>
						<% end %>
						</td>
						<td>
						  <% if message.save_as_draft? %>
						    <button class="btn btn-default btn-xs btn-round">
						      draft	
						    </button>
						  <% elsif !message.save_as_draft? && !message.user.admin? %>	
						    <button class="btn btn-info btn-xs btn-round">
						      sent 	
						    </button>
						  <% elsif !message.save_as_draft? && message.user.admin? %>
						    <button class="btn btn-warning btn-xs btn-round">
						      received	
						    </button>  
						  <% end %>	

						  <% if message.read_message? && message.user.admin? %>
						    <%= link_to [message] do %>
						      <button class="btn btn-info btn-xs btn-round">
						        read 	
						      </button>
						    <% end %>  
						  <% elsif !message.read_message? && !message.user.admin? %>	
						    <%= link_to [message] do %>  
						      <button class="btn btn-danger btn-xs btn-round">
						        unread 	
						      </button>
						    <% end %>  
						  <% end %>	
						  </td>  
						  <td>
						<% if message.save_as_draft? %>	
						  <%= link_to send_message_url(message), method: :patch, data: { confirm: "Are you sure you want to send this message to #{message.recipient_name}?" } do %>
						    <span class="btn btn-success btn-xs btn-round">
						      send?
						    </span>
						  <% end %> 
						<% else %>
						<% end %>
						</td>	
						<td><%= message.created_at.strftime("%B %d, %Y -%T") %></td>
					</tr>
					<% end %>
				<% else %>
                  <tr>
                    <td>no data</td>
                    <td>no data</td>
                    <td>no data</td>
                    <td>no data</td>
                  </tr>
                <% end %>  	
				</tbody>
			</table>

		</div>
	</div>
</div>

